{
  // Open a new untitled file when starting VS Code
  "workbench.startupEditor": "newUntitledFile",

  // Set the line height in the editor
  "editor.lineHeight": 1.8,

  // Set font ligatures to true
  "editor.fontLigatures": true,

  // Disable compact folders in Explorer
  "explorer.compactFolders": false,

  // Set terminal font size and family
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",

  // Disable breadcrumbs in the editor
  "breadcrumbs.enabled": false,

  // Set editor font family
  "editor.fontFamily": "JetBrains Mono",

  // Configure workspace trust for untrusted files
  "security.workspace.trust.untrustedFiles": "newWindow",

  // Set the icon theme for the workspace
  "workbench.iconTheme": "symbols",

  // Set update mode to start automatically
  "update.mode": "start",

  // Disable command center window
  "window.commandCenter": false,

  // Set the color theme for the workspace
  "workbench.colorTheme": "Min Darkest",

  // Set editor font size
  "editor.fontSize": 16,

  "editor.unicodeHighlight.allowedCharacters": {
    "Ã©": true
  },
  "editor.minimap.enabled": false,
  "files.autoSave": "onFocusChange",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "symbols.hidesExplorerArrows": false,
}
